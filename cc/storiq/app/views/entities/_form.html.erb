<% parent ||= nil %>

<%= form_for @entity, html: { class: 'form-inline', data: { parent_id: parent&.id } } do |f| %>
  <label class="my-1 mr-2">Add an Entity</label>
  <% if parent %>
    <%= f.hidden_field :entity_id, value: parent.id %>
  <% end %>
  <%= f.select :entity_type, entity_types(parent), {}, class: "form-control my-1 mr-sm-2" %>
  <%= f.text_field :name, placeholder: "Name", class: "form-control mb-2 mr-sm-2" %>
  <div class="form-group">
    <%= f.submit :save, class: "btn btn-success mb-2" %>
  </div>
<% end %>
